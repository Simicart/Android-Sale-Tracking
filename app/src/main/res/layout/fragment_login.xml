<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FD9802"
    android:id="@+id/rl_login">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/size_190"
        android:layout_height="@dimen/size_190"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_25"/>

    <LinearLayout
        android:id="@+id/ll_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginTop="@dimen/size_5"
        android:layout_below="@+id/iv_logo">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_url"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:padding="@dimen/size_10"/>

            <EditText
                android:id="@+id/et_url"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:padding="@dimen/size_5"
                android:inputType="textWebEmailAddress"
                android:background="@drawable/bottom_line_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:padding="@dimen/size_10"/>

            <EditText
                android:id="@+id/et_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:padding="@dimen/size_5"
                android:inputType="textEmailAddress"
                android:background="@drawable/bottom_line_border"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_password"
                android:layout_width="@dimen/size_40"
                android:layout_height="@dimen/size_40"
                android:padding="@dimen/size_10"/>

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_40"
                android:padding="@dimen/size_5"
                android:inputType="textPassword"
                android:background="#FFFFFF"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_login"
        android:layout_width="@dimen/size_250"
        android:layout_height="@dimen/height_button"
        android:layout_below="@+id/ll_user"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_20"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_login_qr"
        android:layout_width="@dimen/size_250"
        android:layout_height="@dimen/height_button"
        android:layout_below="@+id/bt_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_5"
        android:drawableStart="@drawable/ic_qrcode"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_demo"
        android:layout_width="@dimen/size_250"
        android:layout_height="@dimen/height_button"
        android:layout_below="@+id/bt_login_qr"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/size_5"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/size_5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:padding="@dimen/size_5"/>

        <View
            android:layout_width="@dimen/size_1"
            android:layout_height="@dimen/size_20"
            android:background="@color/colorWhite"
            android:layout_marginStart="@dimen/size_10"
            android:layout_marginEnd="@dimen/size_10"
            android:layout_gravity="center_vertical"></View>

        <TextView
            android:id="@+id/tv_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_16"
            android:padding="@dimen/size_5"/>

    </LinearLayout>

</RelativeLayout>